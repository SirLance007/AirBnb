<% layout("/layouts/boilerplate") -%>

    <body>
        <h1>All Listings</h1>
            <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
                <% for(let listing of alllistings){ %>
                    <a href="/listing/<%=listing._id%>" class="listing-link">
                    <div class="card card-images">
                        <img style="height: 20rem;" src="<%=listing.image.url%>" class="card-img-top"
                            alt="listing_image">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%=listing.title%>
                                </b><br>
                                <% if (listing.price) { %>
                                    &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                                <% } else { %>
                                    Price not available
                                <% } %>                                
                            </p>
                        </div>
                    </div>
                </a>
                    <% } %>
            </div>
        </a>
    </body>